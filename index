    <!-- GSAP Library & ScrollTrigger Plugin -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    
    <script>
        gsap.registerPlugin(ScrollTrigger);

        // --- ANIMATION 1: Panel Scaling ---
        const panels = gsap.utils.toArray(".description, .panels-container .panel");
        panels.forEach((panel, i) => {
            if (i < panels.length - 1) { 
                ScrollTrigger.create({
                    trigger: panel,
                    start: "bottom bottom", 
                    end: "+=200%",
                    onUpdate: self => {
                        let progress = self.progress;
                        let scaleValue = 1 - (progress * progress * 0.05);
                        gsap.to(panel, {
                            scale: scaleValue,
                            opacity: 1 - progress * 1.5, // Fade out the panel as it scales
                            ease: "power1.out",
                            duration: 0.1
                        });
                    }
                });
            }
        });

        // --- ANIMATION 2: FADE & SLIDE UP TEXT ---
        const textParagraphs = gsap.utils.toArray(".panel p");
        
        textParagraphs.forEach(p => {
            gsap.from(p, { // Animate FROM these values
                opacity: 0,
                y: 20, // Start 20px lower
                duration: 0.6,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: p,
                    start: "top 85%", // Start animation when the top of the text is 85% down the screen
                    toggleActions: "play none none none" // Play the animation once and leave it
                }
            });
        });
    </script>
